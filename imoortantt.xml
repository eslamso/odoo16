    <template id="sale_report_inherit_template" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='oe_structure']" position="replace">
            <div class="oe_structure" style="position:absolute;top:300px"/>

        </xpath>
    <xpath expr="//div[@t-field='doc.partner_id']" position="replace">
        <link href="/inherit_pdf_report/static/src/css/style.css" rel="stylesheet"/>
        <div class="customerrr">
        <h1 class="text-end customerr">العميل</h1>
        <div t-field="doc.partner_id" class="text-end testt"
                t-options='{"widget": "contact", "fields": ["name","address"], "no_marker": True,"phone_icons":False}' />
<!--            <p class="text-end testt" t-if="doc.partner_id.vat"><t t-out="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>-->
        </div>

    </xpath>

        <xpath expr="//p[1]" position="replace" class="text-end testt">
            <p class="text-end testt" t-if="doc.partner_id.vat">رقم السجل الضريبي:<span t-field="doc.partner_id.vat"/></p>
            <div class="text-end testt">

            <h2 >
             <span t-field="doc.name"/>
            <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                <span t-elif="doc.state in ['draft','sent']"># عرض السعر  </span>
                <span t-else="">Order # </span>

            </h2>
                <img t-att-src="'/report/barcode/Code128/%s'%(doc.name)" width="300" height="100" alt="Barcode"/>

                </div>
        </xpath>

        <xpath expr="//h2[@class='mt-4']" position="replace" class="text-end">
            <div class="mt-4">

                <img t-att-src="'/report/barcode/QR/%s'%(doc.name)" width="300" height="300" alt="Barcode"/>
            </div>
        </xpath>
<!--         <xpath expr="//h2[@class='mt-4']" position="before">-->
<!--           -->
<!--        </xpath>-->
        <xpath expr="//p[1]" position="replace" class="text-end testt">
            <p class="text-end testt" t-if="doc.partner_id.vat">رقم السجل الضريبي:<span t-field="doc.partner_id.vat"/></p>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']" position="replace">

            <link href="/inherit_pdf_report/static/src/css/tableStyle.css" rel="stylesheet"/>
            <table class="table table-sm o_main_table table-borderless mt-4 content-table">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
<!--                <thead style="display: table-row-group">-->
<!--                    <tr>-->
<!--                        <th name="th_description" class="text-start">Description</th>-->
